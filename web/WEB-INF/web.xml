<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>QrServlet</servlet-name>
        <servlet-class>servlet.QrServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>QrServlet</servlet-name>
        <url-pattern>/qr</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>IdsServlet</servlet-name>
        <servlet-class>servlet.IdsServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>IdsServlet</servlet-name>
        <url-pattern>/ids</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FbServlet</servlet-name>
        <servlet-class>servlet.FbServlet</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>FbServlet</servlet-name>
        <url-pattern>/fb</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GenerateQrsServlet</servlet-name>
        <servlet-class>servlet.GenerateQrsServlet</servlet-class>
        <load-on-startup>4</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>GenerateQrsServlet</servlet-name>
        <url-pattern>/generate_qrs</url-pattern>
    </servlet-mapping>
</web-app>